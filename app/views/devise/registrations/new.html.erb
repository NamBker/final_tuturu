<div class="section">
  <section id="top" class="parallax-section">
    <div id="top2">
      <div class="col-sm-6 col-sm-offset-3 col-xs-12">
        <br><br>
        <div class="formholder">
          <h1>Welcome to AwesomeVN</h1>
          <div class="randompad">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <%= f.label :username, class:"form-label" %>
                <span style="font-size: 0.8vm !important; font-style: italic"> (6 to12 characters)</span>
                <%= f.text_field :username, autofocus: true, class: "form-control", min: 6, max: 12 %>
              </div>

              <div class="field">
                <%= f.label :email, class:"form-label" %><br />
                <%= f.email_field :email, class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :password, class:"form-label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password,minlength: 6, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation, class:"form-label" %><br />
                <%= f.password_field :password_confirmation,minlength: 6, autocomplete: "off", class: "form-control" %>
              </div>

              <br>
              <div class="actions text-center">
                <%= f.submit "Sign up", class:"btn btn-primary btn-reg" %>
              </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
