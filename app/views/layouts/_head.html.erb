<div class="navbar navbar-default navbar-static-top animated fadeInDownBig"
  data-wow-delay="0.1s" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon icon-bar"></span>
        <span class="icon icon-bar"></span>
        <span class="icon icon-bar"></span>
      </button>
      <%= link_to "AwesomeVN", root_path , id: "brand", class: "navbar-brand animated faded",
        "data-wow-delay": "0.3s", method: :get %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <%= render "layouts/menu_user" %>
        <% else %>
          <%= render "layouts/menu_guest" %>
        <% end %>
      </ul>
      <% if @search %>
        <%= search_form_for @search, url: search_path, method: :get,
          class:"navbar-form navbar-right" do |f| %>
          <div class="custom-search-input col-sm-12">
            <div class="input-group">
              <%= f.text_field :name_or_description_or_address_or_review_cont, class: "form-control input-lg",
                placeholder: "Search foods", id: "searchinput" %>
              <span class="input-group-btn">
                <%= button_tag(class: "button btn btn-default btn-lg") do  %>
                  <i class="glyphicon glyphicon-search"></i>
                <% end %>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
