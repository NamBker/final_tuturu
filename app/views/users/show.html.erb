<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<div class="container">
  <div class="fb-profile">
    <img align="left" class="fb-image-lg" src="http://lorempixel.com/850/280/nightlife/5/" alt="Profile image example"/>
    <% if @user.avatar.present? %>
    <%= image_tag @user.avatar, class:"img2 fb-image-profile thumbnail",:align=> "left" %>
    <% else %>
    <%= link_to image_tag("avatar.jpg",class:"img2 fb-image-profile thumbnail",:align=> "left" ) %>

    <% end %>
    <div class="fb-profile-text">
      <div class="info-user">
        <h1><%= @user.username %></h1>
        <p>Girls just wanna go fun.</p>
      </div>
      <div class="info-user" style="padding-top: 10px;">

        <button class="button-follow" type="submit" style="margin-bottom: 20px;">Follow</button>
        <%= render 'shared/stats' %>
      </div>
      </div>
  </div>   
</div>

<div class="container" style="margin-top:80px;">

  <div class="row form-group">
   <% @user.foods.each do |food| %>
   <div class="col-xs-12 col-md-6">
    <div class="panel panel-default">
      <div class="panel-image">
        <%= link_to(food_path(food),:class => "zoom") do %>
        <%= image_tag food.file, class: "panel-image-preview" %>
        <span class="overlay">
         <i class="glyphicon glyphicon-fullscreen"></i>
         <%=  food.name %>
       </span>
       <% end %>
     </div>
     <input type="checkbox" id="toggle-1" class="panel-image-toggle">
     <div class="panel-body">
      <h4><%= link_to food.name, food_path(food) %></h4>
      <p> <%= link_to "View", food_path(food) %></p>
    </div>
    <div class="panel-footer text-center">
      <% if @user == current_user %>

      <%= link_to "Edit", edit_food_path(food) %>
      <%= link_to "Delete", food_path(food),
        method: :delete, data: { confirm: "Are you sure?" } %>
    <% else %>
      <%= link_to "View", food_path(food) %>
    <% end %>
  <% end %>
  <br><br>
</div>

<style>
  body {
    background: #fff;
    color: #000;
    font-size: 18px;
    font-family: 'Open Sans', sans-serif;

  }
  img {
    height: auto;
    width: 500px
  }
  .img2 {
    width: 200px;
    height: 200px;
  }
  .button-follow{
    color: #fff;
    background-color: #1a8bf0;
    border-radius: 6px;
    border: 1px solid #1a8bf0;
    font-family: "Helvetica Neue LT", "Hiragino Kaku Gothic Pro", "Helvetica", "Tahoma", "Arial", sans-serif;
    font-size: 1.5rem;
    line-height: 2rem;
    font-weight: 700;
    cursor: pointer;
    outline: none;
    -moz-transition: all 0.2s ease;
    -o-transition: all 0.2s ease;
    -webkit-transition: all 0.2s ease;
    transition: all 0.2s ease;
    height: 40px;
    width: 80px;
  }

  .button-follow:focus{
    background-color: #64b2f8;
    border: 1px solid #64b2f8;
    outline: none;
  }
</style>
